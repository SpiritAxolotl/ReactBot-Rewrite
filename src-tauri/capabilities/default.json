{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA/GrabBag/*.mp4" }, { "path": "$APPDATA/GrabBag" }]
    }
  ]
}